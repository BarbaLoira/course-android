<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>


    <style name="AppThemePopupTheme" parent="Theme.AppCompat.Light">

        <item name="android:textColor">@color/textColorPrimaryPopupTheme</item>
        <item name="android:windowBackground">@color/windowBackgroundPopupTheme</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme.MenuBottom" parent="AppTheme">

        <item name="colorPrimary">@android:color/white</item>

    </style>

</resources>
